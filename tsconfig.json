{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@utils/*": ["src/utils/*"],
    }
  },
  "include": [
    "src",
    "attached_assets",
    "components"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "out",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
